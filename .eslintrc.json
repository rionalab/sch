{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended",
    "mext",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    // "@typescript-eslint/semi": "off",
    "@typescript-eslint/explicit-function-return-type": "off",
    "ignorePatterns": "off",
    "import/named": "off",
    "linebreak-style": "off",
    "semi": "warn"
    // "prettier": [
    //   "error",
    //   {
    //     "printWidth": 80,
    //     "endOfLine": "auto",
    //     "singleQuote": true,
    //     "tabWidth": 2,
    //     "indentStyle": "space",
    //     "useTabs": false,
    //     "trailingComma": "es5"
    //   }
    // ]
  }
}
